@model IEnumerable<DDWork.Models.TransportationViewModel>

@{
    ViewData["Title"] = "运输报表";
}

    <h1>运输报表</h1>

<form id="queryForm" method="post" action="/TransportationViewModels/Index">
    <div class="form-group">
        <label class="control-label">开始时间</label>
        <input id="date_timepicker_start" name="start" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">结束时间</label>
        <input id="date_timepicker_end" name="end" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <a class="btn btn-block btn-info" id="queryBtn">查询</a>
    </div>
</form>
<script>
    jQuery(function () {
        jQuery.datetimepicker.setLocale('zh');
        jQuery('#date_timepicker_start').datetimepicker({
            format: 'Y.m.d',
            value:'@ViewBag.Start',
            onShow: function (ct) {
                this.setOptions({
                    maxDate: jQuery('#date_timepicker_end').val() ? jQuery('#date_timepicker_end').val() : false
                })
            },
            timepicker: false
        });
        jQuery('#date_timepicker_end').datetimepicker({
            format: 'Y.m.d',
            value:'@ViewBag.End',
            onShow: function (ct) {
                this.setOptions({
                    minDate: jQuery('#date_timepicker_start').val() ? jQuery('#date_timepicker_start').val() : false
                })
            },
            timepicker: false
        });

        $('#queryBtn').click(function () {

            var startdate = $('#date_timepicker_start').val();
            var enddate = $('#date_timepicker_end').val();

            $('#queryForm').submit();
        });


    });
</script>
<div class="table-responsive">
    <table class="table text-nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.material_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.supply_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.car_no)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.start_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.end_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.customer_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.material_weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.carriage_weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.material_unit_price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.carriage_unit_price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.material_count_price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.carriage_count_price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.shareholder_name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.material_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.supply_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.car_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.start_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.end_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customer_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.material_weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.carriage_weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.material_unit_price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.carriage_unit_price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.material_count_price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.carriage_count_price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.shareholder_name)
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
    </div>
