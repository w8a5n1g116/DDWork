@model DDWork.Models.Car

@{
    ViewData["Title"] = "编辑";
}

<h1>编辑</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="car_no" class="control-label"></label>
                <input asp-for="car_no" class="form-control" />
                <span asp-validation-for="car_no" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="car_load" class="control-label"></label>
                <input asp-for="car_load" class="form-control" />
                <span asp-validation-for="car_load" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bank_no" class="control-label"></label>
                <input asp-for="bank_no" class="form-control" />
                <span asp-validation-for="bank_no" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bank_name" class="control-label"></label>
                <input asp-for="bank_name" class="form-control" />
                <span asp-validation-for="bank_name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
