@model DDWork.Models.User

@{
    ViewData["Title"] = "编辑";
}

<h1>编辑</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="privileges" class="control-label"></label>
                <select asp-for="privileges" class="form-control">

                    @if (Model.privileges == "管理员")
                    {
                        <option value="管理员" selected>管理员</option>
                    }
                    else
                    {
                        <option value="管理员">管理员</option>
                    }
                    @if (Model.privileges == "发货员")
                    {
                        <option value="发货员" selected>发货员</option>
                    }
                    else
                    {
                        <option value="发货员">发货员</option>
                    }
                    @if (Model.privileges == "收货员")
                    {
                        <option value="收货员" selected>收货员</option>
                    }
                    else
                    {
                        <option value="收货员">收货员</option>
                    }
                    @if (Model.privileges == "出纳")
                    {
                        <option value="出纳" selected>出纳</option>
                    }
                    else
                    {
                        <option value="出纳">出纳</option>
                    }
                    @if (Model.privileges == "业务经理")
                    {
                        <option value="业务经理" selected>业务经理</option>
                    }
                    else
                    {
                        <option value="业务经理">业务经理</option>
                    }
                    @if (Model.privileges == "会计")
                    {
                        <option value="会计" selected>会计</option>
                    }
                    else
                    {
                        <option value="会计">会计</option>
                    }

                </select>
            </div>


            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
