@model IEnumerable<DDWork.Models.Material>

@{
    ViewData["Title"] = "原料管理";
}

    <h1>原料管理</h1>

<p>
    <a asp-action="Create" class="btn btn-info">添加</a>
</p>
<div class="table-responsive">
    <table class="table text-nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.create_time)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.create_time)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-info">编辑</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-success">详情</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">删除</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
