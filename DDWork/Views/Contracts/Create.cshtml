@model DDWork.Models.Contract

@{
    ViewData["Title"] = "创建";
}

<h1>创建</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="customer.name" class="control-label"></label>
                <select asp-for="customer.id" class="form-control">
                    @foreach (Customer c in ViewBag.Customers)
                    {
                        <option value="@c.id">@c.name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="material.name" class="control-label"></label>
                <select asp-for="material.id" class="form-control">
                    @foreach (Material m in ViewBag.Materials)
                    {
                        <option value="@m.id">@m.name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="weight" class="control-label"></label>
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="print_weight" class="control-label"></label>
                <input asp-for="print_weight" class="form-control" />
                <span asp-validation-for="print_weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="print_price" class="control-label"></label>
                <input asp-for="print_price" class="form-control" />
                <span asp-validation-for="print_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fine" class="control-label"></label>
                <input asp-for="fine" class="form-control" />
                <span asp-validation-for="fine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contract_price" class="control-label"></label>
                <input asp-for="contract_price" class="form-control" />
                <span asp-validation-for="contract_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="delivery_date" class="control-label"></label>
                <input asp-for="delivery_date" class="form-control" />
                <span asp-validation-for="delivery_date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
